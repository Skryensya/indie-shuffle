# ğŸ§± Base image with Elixir + Erlang + Node
FROM elixir:1.15-slim

# ğŸ§© Set working dir
WORKDIR /app

# âš™ï¸ Install system dependencies
RUN apt-get update && apt-get install -y \
  build-essential \
  git \
  inotify-tools \
  curl \
  watchman \
  && rm -rf /var/lib/apt/lists/*

# ğŸ§° Install Hex + Rebar
RUN mix local.hex --force && mix local.rebar --force

# ğŸ“¦ Install Node.js (for assets)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
  apt-get install -y nodejs && \
  npm install -g npm@latest && \
  rm -rf /var/lib/apt/lists/*

# ğŸ”’ Cache dependencies first
COPY mix.exs mix.lock ./
RUN mix deps.get

# ğŸ§© Copy rest of app
COPY . .

# ğŸ”„ Update deps to handle git dependencies correctly
RUN mix deps.update --all || true

# ğŸ”§ Setup and compile assets
RUN mix setup

# ğŸŒ Expose Phoenix port
EXPOSE 4000

# ğŸ Default command - always update deps then start server
CMD ["sh", "-c", "mix deps.get && mix phx.server"]
