# ğŸ§± Base image with Elixir + Erlang + Node
FROM elixir:1.15-slim

# ğŸ§© Set working dir
WORKDIR /app

# âš™ï¸ Install system dependencies including curl for healthcheck
RUN apt-get update && apt-get install -y \
  build-essential \
  git \
  inotify-tools \
  curl \
  && rm -rf /var/lib/apt/lists/*

# ğŸ§° Install Hex + Rebar
RUN mix local.hex --force && mix local.rebar --force

# ğŸ“¦ Install Node.js (for assets)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
  apt-get install -y nodejs && \
  npm install -g npm@latest && \
  rm -rf /var/lib/apt/lists/*

# ğŸŒ Expose Phoenix port
EXPOSE 4000

# ğŸ Default command - install deps, setup database and start server
CMD ["sh", "-c", "mix deps.get && mix assets.setup && mix assets.build && mix ecto.create && mix ecto.migrate && mix phx.server"]
