<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-100 via-pink-100 to-blue-100 p-3">
  <div class="max-w-3xl w-full max-h-[700px]">
    <div class="bg-white rounded-2xl shadow-xl p-4">
      <%= if @game_state.mode == "together" do %>
        <!-- Modo Todos Juntos -->
        <div class="flex items-center justify-center gap-2 mb-3">
          <div class="text-3xl">👥</div>
          <h2 class="text-lg font-bold text-gray-800">Todos Juntos</h2>
        </div>

        <!-- Todos los Participantes -->
        <div class="bg-gray-50 rounded-lg p-3 mb-3">
          <div class="flex flex-wrap gap-1.5 justify-center max-h-20 overflow-y-auto">
            <%= for group <- @game_state.groups, member <- group.members do %>
              <span class="text-xs px-2 py-1 bg-white rounded border border-gray-200">
                <%= member.name %><%= if member.indie_id == @player_info.player_id, do: " (Tú)", else: "" %>
              </span>
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- Modo Grupos -->
        <div class="flex items-center justify-center gap-3 mb-3">
          <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full text-3xl shadow">
            <%= @player_info.group_emoji %>
          </div>
          <h2 class="text-lg font-bold text-gray-800">Tu Grupo</h2>
        </div>

        <!-- Miembros del Grupo -->
        <div class="bg-gray-50 rounded-lg p-3 mb-3">
          <div class="flex flex-wrap gap-1.5 justify-center">
            <%= for member <- @player_info.group_members do %>
              <span class="text-xs px-2 py-1 bg-white rounded border border-gray-200">
                <%= if member.indie_id == @player_info.leader_id do %><span class="text-sm">👑</span> <% end %><%= member.name %><%= if member.indie_id == @player_info.player_id, do: " (Tú)", else: "" %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Timer de Finding Team (si aplica) -->
      <%= if @game_state.phase == :finding_team do %>
        <div class="bg-gradient-to-br from-orange-500 to-red-600 rounded-xl p-6 shadow-lg">
          <div class="text-center">
            <div class="text-5xl mb-3">⏰</div>
            <h3 class="text-2xl font-bold text-white mb-2">
              ¡Encuentra a tu equipo <%= if @player_info.group_emoji, do: @player_info.group_emoji, else: "🔍" %>!
            </h3>
            <div class="text-6xl font-bold text-white mb-3">
              <%= div(@game_state.finding_team_remaining || 0, 1000) %>s
            </div>
            <p class="text-orange-100 text-sm">
              Busca a las personas con tu mismo emoji en el lugar
            </p>
          </div>
        </div>
      <% end %>

      <!-- Pregunta (solo visible en fase :question) -->
      <%= if @game_state.phase == :question do %>
        <%
          # Get question based on mode and player's group
          question = cond do
            # Global question (fallback)
            @game_state.question -> @game_state.question

            # Mode "together" - get question from first group
            @game_state.mode == "together" and length(@game_state.groups) > 0 ->
              first_group = List.first(@game_state.groups)
              first_group && Map.get(first_group, :question)

            # Mode "groups" - get question from player's specific group
            @game_state.mode == "groups" and @player_info.group_id ->
              player_group = Enum.find(@game_state.groups, fn group ->
                group.id == @player_info.group_id
              end)
              player_group && Map.get(player_group, :question)

            # Default fallback - try first group with a question
            length(@game_state.groups) > 0 ->
              Enum.find_value(@game_state.groups, fn group ->
                Map.get(group, :question)
              end)

            true -> nil
          end
        %>

        <%= if question do %>
          <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl p-6 shadow-lg">
            <div class="text-center">
              <div class="text-5xl mb-4">💭</div>
              <h3 class="text-2xl font-bold text-white mb-3">
                <%= question %>
              </h3>
              <p class="text-indigo-100 text-sm">
                <%= if @game_state.mode == "together" do %>
                  Discutan esta pregunta todos juntos
                <% else %>
                  Discute esta pregunta con tu grupo
                <% end %>
              </p>
            </div>
          </div>
        <% else %>
          <!-- Mensaje de espera cuando no hay pregunta -->
          <div class="bg-gradient-to-br from-gray-500 to-gray-600 rounded-xl p-6 shadow-lg">
            <div class="text-center">
              <div class="text-5xl mb-4">⏳</div>
              <h3 class="text-2xl font-bold text-white mb-3">
                Preparando pregunta...
              </h3>
              <p class="text-gray-100 text-sm">
                La pregunta aparecerá en un momento
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>