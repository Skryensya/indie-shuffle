# 🧱 Base image with Elixir + Erlang + Node
FROM elixir:1.15-slim

# 🧩 Set working dir
WORKDIR /app

# ⚙️ Install system dependencies including curl for healthcheck
RUN apt-get update && apt-get install -y \
  build-essential \
  git \
  inotify-tools \
  curl \
  && rm -rf /var/lib/apt/lists/*

# 🧰 Install Hex + Rebar
RUN mix local.hex --force && mix local.rebar --force

# 📦 Install Node.js (for assets)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
  apt-get install -y nodejs && \
  npm install -g npm@latest && \
  rm -rf /var/lib/apt/lists/*

# 🌐 Expose Phoenix port
EXPOSE 4000

# 🏁 Default command - install deps, setup database and start server
CMD ["sh", "-c", "mix deps.get && mix assets.setup && mix assets.build && mix ecto.create && mix ecto.migrate && mix phx.server"]
